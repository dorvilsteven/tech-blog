<section class="dashboard-card">
    <div class="card">
        <div class="title">
            <h4>New Post</h4>
        </div>
        <div class="dash-container">
            <div class="input-box">
                <label for='title'>Title</label>
                <input id="textBox1" value="{{updatedPost.title}}" type="text">
            </div>
            <div class="input-box">
                <label for='title'>Content</label>
                <textarea id="textBox2">{{updatedPost.text}}</textarea>
            </div>
